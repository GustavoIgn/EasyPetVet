<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary_variant"
    tools:context=".FragmentVacinas">

    <!-- Título do Fragmento -->
    <TextView
        android:id="@+id/tvInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Vacinas"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Nome da Vacina -->
    <TextView
        android:id="@+id/tvNomeVacinaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Vacina:"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvInicio"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
        
    <TextView
        android:id="@+id/tvNomeVacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Vacina Exemplo"
        android:textColor="#a0f0a4"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvInicio"
        app:layout_constraintStart_toEndOf="@id/tvNomeVacinaLabel"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <!-- Data de Aplicação -->
    <TextView
        android:id="@+id/tvDataAplicacaoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Aplicação:"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvNomeVacinaLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvDataAplicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2023"
        android:textColor="#a0f0a4"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvNomeVacinaLabel"
        app:layout_constraintStart_toEndOf="@id/tvDataAplicacaoLabel"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"/>

    <!-- Próxima Aplicação -->
    <TextView
        android:id="@+id/tvProximaAplicacaoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próxima Aplicação:"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvDataAplicacaoLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvProximaAplicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2024"
        android:textColor="#a0f0a4"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvDataAplicacaoLabel"
        app:layout_constraintStart_toEndOf="@id/tvProximaAplicacaoLabel"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"/>

    <!-- Botão para Notificação -->
    <Button
        android:id="@+id/buttonNotificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificar"
        android:textColor="#ffffff"
        android:backgroundTint="#4ebf5d"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
